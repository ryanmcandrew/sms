main(role='main' class='container align-center')
    div(class='row')
        div(class='col')
            input(type='text' id='url' value='https://api.twitter.com/2/tweets')
            label(for='url') Host
    div(class='row')
        div(class='col')
            input(type='text' id='twitter-id' value='https://api.twitter.com/2/tweets')
            label(for='url') Twitter software unit id (tweet/user/timeline)
